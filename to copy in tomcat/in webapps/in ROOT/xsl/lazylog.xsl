<?xml version="1.0"?><xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"><xsl:output method="xml" version="1.0"  indent="yes" omit-xml-declaration="yes" media-type="text/html" />    <xsl:template match="/">            <HTML>              <HEAD>               <META http-equiv="Content-Type" content="text/html; charset=UTF-8"/>                <TITLE><xsl:call-template name="title"/></TITLE>               </HEAD>	           <script>	              function NavigateToArticle(f){                  window.navigate(f);	              } 	           </script>                <xsl:apply-templates/>            </HTML>    </xsl:template>    <xsl:template match="*">           <xsl:element name="{name()}">            <xsl:for-each select="./@*">             <xsl:attribute name="{name()}">              <xsl:value-of select="."/>             </xsl:attribute>            </xsl:for-each>             <xsl:apply-templates/>            </xsl:element>    </xsl:template>        <xsl:template match="text()">	<xsl:value-of select="."/>    </xsl:template>    <xsl:template match="lazy">             <xsl:apply-templates/>    </xsl:template>    <xsl:template name="title">node instance    </xsl:template>         <xsl:template match="lazycss">	  <link><xsl:attribute name="rel">stylesheet</xsl:attribute>               <xsl:attribute name="type">text/css</xsl:attribute>               <xsl:attribute name="href"><xsl:value-of select="."/></xsl:attribute>         </link>     </xsl:template>          <xsl:template match="lazybody">	  <body><xsl:attribute name="onload">NavigateToArticle('#expanded')</xsl:attribute>               <xsl:attribute name="background"><xsl:value-of select="."/></xsl:attribute>         </body>     </xsl:template>    <xsl:template match="firstlog">       <H3>first connection</H3>    </xsl:template>    <xsl:template match="nobd">       <H3>connection aborted: no data base</H3>    </xsl:template>    <xsl:template match="noconnect">       <H3>connection aborted: try again</H3>    </xsl:template>    <xsl:template match="lazylog">      <CENTER>      <TABLE  BORDER='1' BGCOLOR='#AAAAFF' >      <FORM method='POST'  action = '/ns/ns' color='#ffffff'>        <TR>          <TD>User Name :            <INPUT TYPE='text' NAME='login' SIZE='20'/>          </TD>        </TR>        <TR>          <TD>Password :              <INPUT TYPE='password' NAME='password' SIZE='20'/>          </TD>        </TR>      <TR>         <TD>         <Input type='submit'  value='Connect'/>         </TD>      </TR>     </FORM>     </TABLE>      <H3>only for autorised persons</H3>     </CENTER>    </xsl:template>    </xsl:stylesheet>